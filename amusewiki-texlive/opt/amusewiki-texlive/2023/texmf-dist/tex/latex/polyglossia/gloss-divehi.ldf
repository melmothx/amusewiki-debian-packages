\ProvidesFile{gloss-divehi.ldf}[polyglossia: module for Divehi]

\RequireBidi
\PolyglossiaSetup{divehi}{
  bcp47=dv,
  bcp47-language=dv,
  bcp47-script=Thaa,
  script=Thaana,
  scripttag=thaa,
  langtag=DIV,% TODO Support DHV as well?
  direction=RL,
  hyphennames={nohyphenation},
  fontsetup=true
}

% BCP-47 compliant aliases
\setlanguagealias*{divehi}{dv}

