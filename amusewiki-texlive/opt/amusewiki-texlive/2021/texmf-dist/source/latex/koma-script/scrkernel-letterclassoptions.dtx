%    \begin{macrocode}
\newcommand*{\showfields}[1]{%
  \AtBeginLetter{%
    \begingroup
      \@for \@tempa:=#1\do{%
        \scr@trim@spaces\@tempa
        \ifx\@tempa\@empty\else
          \@ifundefined{showfield@\@tempa}{%
