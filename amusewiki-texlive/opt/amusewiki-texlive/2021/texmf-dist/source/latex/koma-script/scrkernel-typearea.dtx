      \marginparwidth=\textwidth
      \textwidth=\@tempskipa
    \fi
  \fi
%    \end{macrocode}
% Next the vertical size of a block.
%    \begin{macrocode}
  \ta@vblk=\paperheight
  \divide\ta@vblk by\ta@div
%    \end{macrocode}
% The top margin depends on this vertical block size. But note, \TeX{} will
% increase it by 1\,in.
%    \begin{macrocode}
